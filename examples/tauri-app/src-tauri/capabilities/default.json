{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "webview:default",
    "app:default",
    "resources:default",
    "image:default",
    "menu:default",
    "tray:default",
    "shellx:default",
    "shellx:allow-execute",
    "shellx:allow-spawn",
    "shellx:allow-open",
    "shellx:allow-stdin-write",
    "shellx:allow-kill",
    {
      "identifier": "shellx:allow-execute",
      "allow": [
        {
          "name": "echo",
          "cmd": "echo",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}